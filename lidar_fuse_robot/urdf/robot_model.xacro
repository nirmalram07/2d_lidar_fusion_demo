<?xml version="1.0"?>
<robot xmlns:xacro = "http://www.ros.org/wiki/xacro" name="robot">

    <material name="white">
        <color rgba="1.0 1.0 1.0 1.0"/>    
    </material>

    <material name="orange">
        <color rgba="1.0 0.3 0.1 1.0"/>    
    </material>
    
    <material name="blue">
        <color rgba="0.2 0.2 1.0 1.0"/>    
    </material>

    <material name="black">
        <color rgba="0 0 0 1.0"/>    
    </material>

    <material name="silver">
        <color rgba="0.75 0.75 0.75 1.0"/>
    </material>

    <material name="grey">
        <color rgba="0.5 0.5 0.5 1.0"/>
    </material>

    <!-- BASE LINK -->

    <link name="base_link">
        <origin xyz="0.0 0.0 0.0"/>
    </link>

    <!-- CHASSIS -->

    <joint name="base_to_chassis1" type="fixed">
        <parent link="base_link"/>
        <child link="chassis_1"/>
        <origin xyz="0 0 0.12"/>
    </joint>

    <link name="chassis_1">
        <visual>
            <origin xyz="0 0 0.0"/>
            <geometry>
                <box size="0.60 0.40 0.05"/>
            </geometry>
            <material name="silver"/>
        </visual>
        <collision>
            <origin xyz="0 0 0.0"/>
            <geometry>
                <box size="0.60 0.40 0.05"/>
            </geometry>
        </collision>
        <inertial>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <mass value="12.48"/>
            <inertia ixx="0.17" ixy="0.0" ixz="0.0"
                    iyy="0.32" iyz="0.0"
                    izz="0.47"/>
        </inertial>
    </link>

    <joint name="chassis1_to_chassis2" type="fixed">
        <parent link="chassis_1"/>
        <child link="chassis_2"/>
        <origin xyz="0 0 0.035"/>
    </joint>

    <link name="chassis_2">
        <visual>
            <origin xyz="0 0 0.0"/>
            <geometry>
                <box size="0.57 0.37 0.02"/>
            </geometry>
            <material name="white"/>
            <gazebo reference="chassis_2">
                <material>Gazebo/Orange</material>
            </gazebo>
        </visual>
        <collision>
            <origin xyz="0 0 0.0"/>
            <geometry>
                <box size="0.57 0.37 0.02"/>
            </geometry>
        </collision>
        <inertial>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <mass value="4.39"/>
            <inertia ixx="0.04" ixy="0.0" ixz="0.0"
                    iyy="0.10" iyz="0.0"
                    izz="0.13"/>
        </inertial>
    </link>

    <joint name="chassis2_to_chassis3" type="fixed">
        <parent link="chassis_2"/>
        <child link="chassis_3"/>
        <origin xyz="0 0 0.03"/>
    </joint>

    <link name="chassis_3">
        <visual>
            <origin xyz="0 0 0.0"/>
            <geometry>
                <box size="0.60 0.40 0.04"/>
            </geometry>
            <material name="silver"/>
        </visual>
        <collision>
            <origin xyz="0 0 0.0"/>
            <geometry>
                <box size="0.60 0.40 0.04"/>
            </geometry>
        </collision>
        <inertial>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <mass value="9.98"/>
            <inertia ixx="0.14" ixy="0.0" ixz="0.0"
                    iyy="0.31" iyz="0.0"
                    izz="0.41"/>
        </inertial>
    </link>

    <!-- DRIVE WHEELS -->

    <!-- LEFT WHEEL LINK -->

    <joint name="left_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="left_wheel"/>
        <origin xyz="0.0 0.23 0.12" rpy="-${pi/2} 0.0 0.0"/>
        <axis xyz="0.0 0.0 1.0"/>
    </joint>

    <link name="left_wheel">
        <visual>
            <origin xyz="0.0 0.0 0.0"/>
            <geometry>
                <cylinder radius="0.12" length="0.06"/>
            </geometry>
            <material name="black"/>
        </visual>
        <collision>
            <origin xyz="0.0 0.0 0.0"/>
            <geometry>
                <cylinder radius="0.12" length="0.06"/>
            </geometry>
        </collision>
        <inertial>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <mass value="2.98"/>
            <inertia ixx="0.0358" ixy="0.0" ixz="0.0"
                    iyy="0.0358" iyz="0.0"
                    izz="0.0214"/>
        </inertial>
    </link>

    <!-- RIGHT WHEEL LINK -->

    <joint name="right_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="right_wheel"/>
        <origin xyz="0.0 -0.23 0.12" rpy="${pi/2} 0.0 0.0"/>
        <axis xyz="0.0 0.0 -1.0"/>
    </joint>

    <link name="right_wheel">
        <visual>
            <origin xyz="0.0 0.0 0.0"/>
            <geometry>
                <cylinder radius="0.12" length="0.06"/>
            </geometry>
            <material name="black"/>
        </visual>
        <collision>
            <origin xyz="0.0 0.0 0.0"/>
            <geometry>
                <cylinder radius="0.12" length="0.06"/>
            </geometry>
        </collision>
        <inertial>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <mass value="2.98"/>
            <inertia ixx="0.0358" ixy="0.0" ixz="0.0"
                    iyy="0.0358" iyz="0.0"
                    izz="0.0214"/>
        </inertial>
    </link>

    <!-- CASTER WHEEL LINK -->

   <joint name="caster_wheel_joint1a" type="fixed">
        <parent link="chassis_1"/>
        <child link="front_caster_wheel_top"/>
        <origin xyz="0.22 0.0 -0.05"/>
        <axis xyz="0.0 0.0 0.0"/>
    </joint>

     <link name="front_caster_wheel_top">
        <visual>
            <origin xyz="0.0 0.0 0.0"/>
            <geometry>
                <box size="0.035 0.035 0.08"/>
            </geometry>
            <material name="white"/>
        </visual>
        <collision>
            <origin xyz="0.0 0.0 0.0"/>
            <geometry>
                <box size="0.035 0.035 0.08"/>
            </geometry>
        </collision>
        <inertial>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <mass value="0.102"/>
            <inertia ixx="6.19e-5" ixy="0.0" ixz="0.0"
                    iyy="6.19e-5" iyz="0.0"
                    izz="2.70e-5"/>
        </inertial>
    </link>

    <joint name="caster_wheel_joint1b" type="fixed">
        <parent link="front_caster_wheel_top"/>
        <child link="front_caster_wheel_bottom"/>
        <origin xyz="0.0 0.0 -0.05"/>
        <axis xyz="0.0 0.0 0.0"/>
    </joint>

    <link name="front_caster_wheel_bottom">
        <visual>
            <origin xyz="0.0 0.0 0.0"/>
            <geometry>
                <sphere radius="0.02"/>
            </geometry>
            <material name="black"/>
        </visual>
        <collision>
            <origin xyz="0.0 0.0 0.0"/>
            <geometry>
                <sphere radius="0.02"/>
            </geometry>
        </collision>
        <inertial>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <mass value="0.0369"/>
            <inertia ixx="2.95e-6" ixy="0.0" ixz="0.0"
                    iyy="2.95e-6" iyz="0.0"
                    izz="2.95e-6"/>
        </inertial>
    </link>


    <joint name="caster_wheel_joint2a" type="fixed">
        <parent link="chassis_1"/>
        <child link="back_caster_wheel_top"/>
        <origin xyz="-0.22 0.0 -0.05"/>
        <axis xyz="0.0 0.0 0.0"/>
    </joint>

     <link name="back_caster_wheel_top">
        <visual>
            <origin xyz="0.0 0.0 0.0"/>
            <geometry>
                <box size="0.035 0.035 0.08"/>
            </geometry>
            <material name="white"/>
        </visual>
        <collision>
            <origin xyz="0.0 0.0 0.0"/>
            <geometry>
                <box size="0.035 0.035 0.08"/>
            </geometry>
        </collision>
        <inertial>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <mass value="0.102"/>
            <inertia ixx="6.19e-5" ixy="0.0" ixz="0.0"
                    iyy="6.19e-5" iyz="0.0"
                    izz="2.70e-5"/>
        </inertial>
    </link>

    <joint name="caster_wheel_joint2b" type="fixed">
        <parent link="back_caster_wheel_top"/>
        <child link="back_caster_wheel_bottom"/>
        <origin xyz="0.0 0.0 -0.05"/>
        <axis xyz="0.0 0.0 0.0"/>
    </joint>

    <link name="back_caster_wheel_bottom">
        <visual>
            <origin xyz="0.0 0.0 0.0"/>
            <geometry>
                <sphere radius="0.02"/>
            </geometry>
            <material name="black"/>
        </visual>
        <collision>
            <origin xyz="0.0 0.0 0.0"/>
            <geometry>
                <sphere radius="0.02"/>
            </geometry>
        </collision>
        <inertial>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <mass value="0.0369"/>
            <inertia ixx="2.95e-6" ixy="0.0" ixz="0.0"
                    iyy="2.95e-6" iyz="0.0"
                    izz="2.95e-6"/>
        </inertial>

    </link>

    <!-- Lidar Base Link -->

    <joint name="chassis1_to_front_lidar_base" type="fixed">
        <parent link="chassis_1"/>
        <child link="front_lidar_base"/>
        <origin xyz="0.25 0.15 -0.03"/>
    </joint>

    <link name="front_lidar_base">
        <visual>
            <origin xyz="0 0 0.0"/>
            <geometry>
                <box size="0.1 0.1 0.01"/>
            </geometry>
            <material name="black"/>
        </visual>
        <collision>
            <origin xyz="0 0 0.0"/>
            <geometry>
                <box size="0.1 0.1 0.01"/>
            </geometry>
        </collision>
        <inertial>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <mass value="0.104"/>
            <inertia ixx="8.84e-5" ixy="0.0" ixz="0.0"
                    iyy="8.84e-5" iyz="0.0"
                    izz="1.77e-4"/>
        </inertial>

    </link>

    <joint name="chassis1_to_back_lidar_base" type="fixed">
        <parent link="chassis_1"/>
        <child link="back_lidar_base"/>
        <origin xyz="-0.25 -0.15 -0.03"/>
    </joint>

    <link name="back_lidar_base">
        <visual>
            <origin xyz="0 0 0.0"/>
            <geometry>
                <box size="0.1 0.1 0.01"/>
            </geometry>
            <material name="black"/>
        </visual>
        <collision>
            <origin xyz="0 0 0.0"/>
            <geometry>
                <box size="0.1 0.1 0.01"/>
            </geometry>
        </collision>
        <inertial>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <mass value="0.104"/>
            <inertia ixx="8.84e-5" ixy="0.0" ixz="0.0"
                    iyy="8.84e-5" iyz="0.0"
                    izz="1.77e-4"/>
        </inertial>
    </link>

    <joint name="front_lidar_base_to_front_lidar" type="fixed">
        <parent link="front_lidar_base"/>
        <child link="front_lidar"/>
        <origin xyz="0.00 0.00 -0.02"/>
    </joint>

    <link name="front_lidar">
        <visual>
            <origin xyz="0 0 0.0"/>
            <geometry>
                <cylinder radius="0.03" length="0.03"/>
            </geometry>
            <material name="blue"/>
        </visual>
        <collision>
            <origin xyz="0 0 0.0"/>
            <geometry>
                <cylinder radius="0.03" length="0.03"/>
            </geometry>
        </collision>
        <inertial>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <mass value="0.0882"/>
            <inertia ixx="1.95e-5" ixy="0.0" ixz="0.0"
                    iyy="1.95e-5" iyz="0.0"
                    izz="3.97e-5"/>
        </inertial>
    </link>

    <joint name="back_lidar_base_to_back_lidar" type="fixed">
        <parent link="back_lidar_base"/>
        <child link="back_lidar"/>
        <origin xyz="0.00 0.00 -0.02"/>
    </joint>

    <link name="back_lidar">
        <visual>
            <origin xyz="0 0 0.0"/>
            <geometry>
                <cylinder radius="0.03" length="0.03"/>
            </geometry>
            <material name="blue"/>
        </visual>
        <collision>
            <origin xyz="0 0 0.0"/>
            <geometry>
                <cylinder radius="0.03" length="0.03"/>
            </geometry>
        </collision>
        <inertial>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <mass value="0.0882"/>
            <inertia ixx="1.95e-5" ixy="0.0" ixz="0.0"
                    iyy="1.95e-5" iyz="0.0"
                    izz="3.97e-5"/>
        </inertial>
    </link>

    <gazebo reference="chassis_1">
        <material>Gazebo/Orange</material>
    </gazebo>
    <gazebo reference="chassis_2">
        <material>Gazebo/White</material>
    </gazebo>
    <gazebo reference="chassis_3">
        <material>Gazebo/Orange</material>
    </gazebo>
    <gazebo reference="left_wheel">
        <material>Gazebo/Black</material>
    </gazebo>
    <gazebo reference="right_wheel">
        <material>Gazebo/Black</material>
    </gazebo>
    <gazebo reference="front_lidar">
        <material>Gazebo/Blue</material>
    </gazebo>
    <gazebo reference="back_lidar">
        <material>Gazebo/Blue</material>
    </gazebo>
    <gazebo reference="front_caster_wheel_bottom">
        <material>Gazebo/Black</material>
        <mu1 value ="0.008"/>
        <mu2 value ="0.008"/>
    </gazebo>
    <gazebo reference="back_caster_wheel_bottom">
        <material>Gazebo/Black</material>
        <mu1 value ="0.008"/>
        <mu2 value ="0.008"/>
    </gazebo>
</robot>