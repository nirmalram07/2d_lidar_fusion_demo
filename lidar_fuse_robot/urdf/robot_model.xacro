<?xml version="1.0"?>
<robot xmlns:xacro = "http://www.ros.org/wiki/xacro" name="robot">

    <material name="white">
        <color rgba="1.0 1.0 1.0 1.0"/>    
    </material>

    <material name="orange">
        <color rgba="1.0 0.3 0.1 1.0"/>    
    </material>
    
    <material name="blue">
        <color rgba="0.2 0.2 1.0 1.0"/>    
    </material>

    <material name="black">
        <color rgba="0 0 0 1.0"/>    
    </material>

    <material name="silver">
        <color rgba="0.75 0.75 0.75 1.0"/>
    </material>

    <material name="grey">
        <color rgba="0.5 0.5 0.5 1.0"/>
    </material>

    <!-- BASE LINK -->

    <link name="base_link">
        <origin xyz="0.0 0.0 0.0"/>
    </link>

    <!-- CHASSIS -->

    <joint name="base_to_chassis1" type="fixed">
        <parent link="base_link"/>
        <child link="chassis_1"/>
        <origin xyz="0 0 0.11"/>
    </joint>

    <link name="chassis_1">
        <visual>
            <origin xyz="-0.325 -0.225 0.0"/>
            <geometry>
                <mesh filename="file://$(find lidar_fuse_robot)/stl/robot_base_top_plane.stl" scale="0.001 0.001 0.001"/>
            </geometry>
            <material name="white"/>
        </visual>
        <collision>
            <origin xyz="-0.325 -0.225 0.0"/>
            <geometry>
                <mesh filename="file://$(find lidar_fuse_robot)/stl/robot_base_top_plane.stl" scale="0.001 0.001 0.001"/>
            </geometry>
        </collision>
        <inertial>
            <mass value="23.62"/>
            <origin xyz="-0.325 -0.225 0.0"/>
            <inertia ixx="1.63" ixy="1.73" ixz="0.21"
                    iyx="1.73" iyy="3.96" iyz="0.21"
                    izx="0.21" izy="0.21" izz="4.89"/>
        </inertial>
    </link>

    <!-- DRIVE WHEELS -->

    <!-- LEFT WHEEL LINK -->

    <joint name="left_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="left_wheel"/>
        <origin xyz="0.0 0.245 0.12" rpy="-${pi/2} 0.0 0.0"/>
        <axis xyz="0.0 0.0 1.0"/>
    </joint>

    <link name="left_wheel">
        <visual>
            <origin xyz="0.0 0.0 0.0"/>
            <geometry>
                <cylinder radius="0.12" length="0.04"/>
            </geometry>
            <material name="black"/>
        </visual>
        <collision>
            <origin xyz="0.0 0.0 0.0"/>
            <geometry>
                <cylinder radius="0.12" length="0.04"/>
            </geometry>
        </collision>
        <inertial>
            <mass value="1.06"/>
            <origin xyz="0 0 0"/>
            <inertia ixx="0.0026" ixy="0" ixz="0" iyy="0.0026" iyz="0" izz="0.00297"/>
        </inertial>
    </link>

    <!-- RIGHT WHEEL LINK -->

    <joint name="right_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="right_wheel"/>
        <origin xyz="0.0 -0.245 0.12" rpy="${pi/2} 0.0 0.0"/>
        <axis xyz="0.0 0.0 -1.0"/>
    </joint>

    <link name="right_wheel">
        <visual>
            <origin xyz="0.0 0.0 0.0"/>
            <geometry>
                <cylinder radius="0.12" length="0.04"/>
            </geometry>
            <material name="black"/>
        </visual>
        <collision>
            <origin xyz="0.0 0.0 0.0"/>
            <geometry>
                <cylinder radius="0.12" length="0.04"/>
            </geometry>
        </collision>
        <inertial>
            <mass value="1.06"/>
            <origin xyz="0 0 0"/>
            <inertia ixx="0.0026" ixy="0" ixz="0" iyy="0.0026" iyz="0" izz="0.00297"/>
        </inertial>
    </link>

    <!-- CASTER WHEEL LINK -->

    <joint name="caster_wheel_joint1" type="fixed">
        <parent link="base_link"/>
        <child link="front_caster_wheel"/>
        <origin xyz="0.20 -0.025 0.0"/>
        <axis xyz="0.0 0.0 0.0"/>
    </joint>

    <link name="front_caster_wheel">
        <visual>
            <origin xyz="0.0 0.0 0.0"/>
            <geometry>
                <mesh filename="file://$(find lidar_fuse_robot)/stl/caster_new_front_plane.stl" scale="0.001 0.001 0.001"/>
            </geometry>
            <material name="grey"/>
        </visual>
        <collision>
            <origin xyz="0.0 0.0 0.0"/>
            <geometry>
                <mesh filename="file://$(find lidar_fuse_robot)/stl/caster_new_front_plane.stl" scale="0.001 0.001 0.001"/>
            </geometry>
            <material name="grey"/>
        </collision>
        <inertial>
            <mass value="0.33"/>
            <origin xyz="0 0 0"/>
            <inertia ixx="0.00037" ixy="0" ixz="0" iyy="0.00037" iyz="0" izz="0.00037"/>
        </inertial>
    </link>

    <joint name="caster_wheel_joint2" type="fixed">
        <parent link="base_link"/>
        <child link="back_caster_wheel"/>
        <origin xyz="-0.25 -0.025 0.0"/>
        <axis xyz="0.0 0.0 0.0"/>
    </joint>

    <link name="back_caster_wheel">
        <visual>
            <origin xyz="0.0 0.0 0.0"/>
            <geometry>
                <mesh filename="file://$(find lidar_fuse_robot)/stl/caster_new_front_plane.stl" scale="0.001 0.001 0.001"/>
            </geometry>
            <material name="grey"/>
        </visual>
        <collision>
            <origin xyz="0.0 0.0 0.0"/>
            <geometry>
                <mesh filename="file://$(find lidar_fuse_robot)/stl/caster_new_front_plane.stl" scale="0.001 0.001 0.001"/>
            </geometry>
            <material name="grey"/>
        </collision>
        <inertial>
            <mass value="0.33"/>
            <origin xyz="0 0 0"/>
            <inertia ixx="0.00037" ixy="0" ixz="0" iyy="0.00037" iyz="0" izz="0.00037"/>
        </inertial>
    </link>

    <!--Lidar link-->

    <joint name="front_lidar_joint" type="fixed">
        <parent link="base_link"/>
        <child link="front_lidar"/>
        <origin xyz="0.24 0.140 0.075" rpy="0.0 0.0 -0.78"/>
        <axis xyz="0.0 0.0 0.0"/>
    </joint>

        <link name="front_lidar">
        <visual>
            <origin xyz="-0.04 -0.02 -0.02"/>
            <geometry>
                <mesh filename="file://$(find lidar_fuse_robot)/stl/lidar_front.stl" scale="0.001 0.001 0.001"/>
            </geometry>
            <material name="blue"/>
        </visual>
        <collision>
            <origin xyz="-0.04 -0.02 -0.02"/>
            <geometry>
                <mesh filename="file://$(find lidar_fuse_robot)/stl/lidar_front.stl" scale="0.001 0.001 0.001"/>
            </geometry>
            <material name="blue"/>
        </collision>
        <inertial>
            <mass value="0.18"/>
            <origin xyz="-0.04 -0.02 -0.02"/>
            <inertia ixx="0.0009" ixy="-0.00032" ixz="0.00012"
                    iyx="-0.00032" iyy="0.0010" iyz="-0.00028"
                    izx="0.00012" izy="-0.00028" izz="0.00034"/>
        </inertial>
    </link>

    <joint name="back_lidar_joint" type="fixed">
        <parent link="base_link"/>
        <child link="back_lidar"/>
        <origin xyz="-0.24 -0.140 0.075" rpy="0.0 0.0 2.35619"/>
        <axis xyz="0.0 0.0 0.0"/>
    </joint>

    <link name="back_lidar">
        <visual>
            <origin xyz="-0.04 -0.02 -0.02"/>
            <geometry>
                <mesh filename="file://$(find lidar_fuse_robot)/stl/lidar_front.stl" scale="0.001 0.001 0.001"/>
            </geometry>
            <material name="blue"/>
        </visual>
        <collision>
            <origin xyz="-0.04 -0.02 -0.02"/>
            <geometry>
                <mesh filename="file://$(find lidar_fuse_robot)/stl/lidar_front.stl" scale="0.001 0.001 0.001"/>
            </geometry>
            <material name="blue"/>
        </collision>
        <inertial>
            <mass value="0.18"/>
            <origin xyz="-0.04 -0.02 -0.02"/>
            <inertia ixx="0.0009" ixy="-0.00032" ixz="0.00012"
                    iyx="-0.00032" iyy="0.0010" iyz="-0.00028"
                    izx="0.00012" izy="-0.00028" izz="0.00034"/>
        </inertial>
    </link>
    <gazebo reference="left_wheel">
        <material>Gazebo/Blue</material>
    </gazebo>


</robot>